

<div class="card-body">
  <%= form_with(model: [:admin, owner]) do |f| %>
    <% if owner.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

        <ul>
        <% owner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group row">
      <%= f.label :Name,  class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= f.text_field :name, id: :owner_name, class: "form-control", required:true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :contact1, class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= f.text_field :contact1, id: :owner_contact1,class: "form-control", required:true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :contact2, class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= f.text_field :contact2, id: :owner_contact2,class: "form-control", required:true %>
      </div>  
    </div>

    <div class="form-group row">
      <%= f.label :email, class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= f.text_field :email, id: :owner_email,class: "form-control", required:true %>
      </div>  
    </div>

    <div class="form-group row">
      <%= f.label :address, class: "col-lg-3 col-form-label form-control-label"   %>
      <div class="col-lg-9">
        <%= f.text_field :address, id: :owner_address,class: "form-control", required:true %>
      </div>  
    </div>

    <div class="form-group row">
      <%= f.label :city, class: "col-lg-3 col-form-label form-control-label" %>
      <div class="col-lg-9">
        <%= f.text_field :city, id: :owner_city,class: "form-control", required:true  %>
      </div>  
    </div>

    <div class="form-group row">
      <%= f.label :state, class: "col-lg-3 col-form-label form-control-label" %>
      <div class="col-lg-9">
        <%= f.text_field :state, id: :owner_state,class: "form-control" , required:true %>
      </div>  
    </div>
    <div class="shop_nested_form mb-5 mt-5">
      <%= f.fields_for :shops do |shop| %>
        <%= render 'shop_fields', f: shop %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add Shop', f, :shops, class: "btn btn-primary" %>
      </div>
    </div>
    <hr>  
    <div class="form-group row">
      <label class="col-lg-3 col-form-label form-control-label"></label>
      <div class="col-lg-9 actions">
        <%= link_to 'Back', admin_owners_path, class: "btn btn-secondary" %>
        <%= f.submit class: "btn btn-primary", value: "Create Owner" %>
      </div>
    </div>
  <% end %>
</div>  
