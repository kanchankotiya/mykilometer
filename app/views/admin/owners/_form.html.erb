

<div class="card-body">
  <%= form_with(model: [:admin, owner],local: true) do |form| %>
    <% if owner.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

        <ul>
        <% owner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group row">
      <%= form.label :Name,  class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= form.text_field :name, id: :owner_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :contact1, class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= form.text_field :contact1, id: :owner_contact1,class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :contact2, class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= form.text_field :contact2, id: :owner_contact2,class: "form-control" %>
      </div>  
    </div>

    <div class="form-group row">
      <%= form.label :email, class: "col-lg-3 col-form-label form-control-label"  %>
      <div class="col-lg-9">
        <%= form.text_field :email, id: :owner_email,class: "form-control" %>
      </div>  
    </div>

    <div class="form-group row">
      <%= form.label :address, class: "col-lg-3 col-form-label form-control-label"   %>
      <div class="col-lg-9">
        <%= form.text_field :address, id: :owner_address,class: "form-control" %>
      </div>  
    </div>

    <div class="form-group row">
      <%= form.label :city, class: "col-lg-3 col-form-label form-control-label" %>
      <div class="col-lg-9">
        <%= form.text_field :city, id: :owner_city,class: "form-control"  %>
      </div>  
    </div>

    <div class="form-group row">
      <%= form.label :state, class: "col-lg-3 col-form-label form-control-label" %>
      <div class="col-lg-9">
        <%= form.text_field :state, id: :owner_state,class: "form-control"  %>
      </div>  
    </div>

    <div class="form-group row">
      <label class="col-lg-3 col-form-label form-control-label"></label>
      <div class="col-lg-9 actions">
        <%= link_to 'Back', admin_owners_path, class: "btn btn-secondary" %>
        <%= form.submit class: "btn btn-primary", value: "Create Owner" %>
      </div>
    </div>
  <% end %>
</div>  
