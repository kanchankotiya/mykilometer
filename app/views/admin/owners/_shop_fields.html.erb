
<div class="nested-fields">
  <hr class="myhr">
  <h1 class="text-muted">Add Shop</h1>
  <div class="form-group row">
    <%= f.label :name,  class: "col-lg-3 col-form-label form-control-label"  %>
    <div class="col-lg-9">
      <%= f.text_field :name, id: :shop_name, class: "form-control" %>
    </div>  
  </div>

  <div class="form-group row">
    <%= f.label :address, class: "col-lg-3 col-form-label form-control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :address, id: :shop_address, class: "form-control" %>
    </div>  
  </div>

  <div class="form-group row">
    <%= f.label :cover_image,class: "col-lg-3 col-form-label form-control-label" %>
    <div class="col-lg-9">
      <%= f.file_field :cover_image, id: :shop_cover_image %>
    </div>  
  </div>
   <%= link_to_remove_association "remove task", f, class: "btn btn-danger float-right"%>
</div>

