        <%= form.text_field :item_price, id: :shop_item_item_price, class: "form-control"  %>
      </div>  
    </div>

     
        <%= form.hidden_field :shop_id, id: :shop_item_shop_id%>
      
     <div class="form-group row">
      <label class="col-lg-3 col-form-label form-control-label"></label>
      <div class="col-lg-9 actions">
        <%= link_to 'Back',admin_shop_items_path, class: "btn btn-secondary" %>
        <%= form.submit class: "btn btn-primary", value: "Create Shop_Item" %>
      </div>
    </div>
  <% end %>
</div>  
