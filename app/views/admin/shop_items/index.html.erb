<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Shop Items</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-light">
        <tr>
          <th>Item Name</th>
          <th>Item Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @shop_items.each do |shop_item| %>
          <tr>
            <td><%= shop_item.item_name %></td>
            <td><%= shop_item.item_price %></td>
            <td><%= link_to 'Show', admin_shop_item_path(shop_item) %></td>
            <td><%= link_to 'Edit', edit_admin_shop_item_path(shop_item) %></td>
            <td><%= link_to 'Destroy', admin_shop_item_path(shop_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New Shop Item', new_admin_shop_item_path, class: "btn btn-outline-primary" %>
</div>  
