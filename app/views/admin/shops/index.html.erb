<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Shops</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Cover image</th>
          <th>Owner</th>
          <th>Business type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @shops.each do |shop| %>
          <tr>
         
            <td><%= shop.name %></td>
            <td><%= shop.address %></td>
            <td><%= shop.latitude %></td>
            <td><%= shop.longitude %></td>
           
              <td><%= image_tag shop.cover_image, style: "height:50px; width:50px;" %></td>
 
            <td><%= link_to 'Show', admin_shop_path(shop) %></td>
            <td><%= link_to 'Edit', edit_admin_shop_path(shop) %></td>
            <td><%= link_to 'Destroy', admin_shop_path(shop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New Shop',new_admin_shop_path, class: "btn btn-outline-primary" %>
</div>  
