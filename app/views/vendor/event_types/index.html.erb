<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Event Types</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @event_types.each do |event_type| %>
          <tr>
            <td><%= event_type.name %></td>
            <td><%= link_to 'Show', vendor_event_type_path(event_type) %></td>
            <td><%= link_to 'Edit', edit_vendor_event_type_path(event_type) %></td>
            <td><%= link_to 'Destroy',vendor_event_type_path(event_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New Event Type', new_vendor_event_type_path,class: "btn btn-outline-primary" %>
</div>  

