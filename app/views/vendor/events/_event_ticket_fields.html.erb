<div class="nested-fields">
  <div class="card mt-5">
    <div class="card-header bg-secondary">
      <h4 class="text-white">Add Event Ticket</h4>
    </div>
    <div class="card-body">
      <div class="form-group">
        <%= f.label :Price %>
        <%= f.text_field :price, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :Name %>
        <%= f.text_field :name, class: "form-control"   %>
      </div>

      <div class="form-group">
        <%= f.label :Sales_Start_Date %>
        <%= f.datetime_select  :sales_start_date, class: "form-control"   %>
      </div>

      <div class="form-group">
        <%= f.label :Sales_End_Date %>
        <%= f.datetime_select  :sales_end_date , class: "form-control" %>
      </div>
      <%= link_to_remove_association "Remove Event Ticket", f , class: "btn btn-primary"%>
    </div>  
  </div>
</div>
     




<style type="text/css">
  .btn-remove, .btn-remove:hover { background-color: #ad2020; }
  .select-days{border:1px solid red;}
  .form-control, form input, form textarea, form select{background-color: #fff;border:1px solid #cccccc;}
  @media only screen and (max-width:768px){
  .btn-remove, .btn-remove:hover { background-color: #ad2020;margin-bottom: 6%; }

}
</style>
