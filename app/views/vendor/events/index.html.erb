  <p id="notice"><%= notice %></p>
  
 <div class="container"> 
  <h1>Events</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Baneer image</th>
          <th>Vanue</th>
          <th>Address</th>
      
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= image_tag event.baneer_image_url, width: "200px;" %></td>
            <td><%= event.vanue %></td>
            <td><%= event.address %></td>
            <td><%= link_to 'Show', vendor_event_path(event) %></td>
            <td><%= link_to 'Edit', edit_vendor_event_path(event) %></td>
            <td><%= link_to 'Destroy',  vendor_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> 
  <%= link_to 'New Event', new_vendor_event_path , class: "btn btn-outline-primary"%>
</div>